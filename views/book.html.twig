{% extends "layout.html.twig" %}

{% block title %}{{ book.title }}{% endblock %}

{% block content %}
{% for flashMessage in app.session.flashbag.get('success') %}
<div class="alert alert-success">
    {{ flashMessage }}
</div>
{% endfor %}
{% for flashMessage in app.session.flashbag.get('error') %}
<div class="alert alert-danger">
    {{ flashMessage }}
</div>
{% endfor %}
<div class="jumbotron">
	<div class="row">
		<div class="col-md-5">
			<img class="img-responsive" id="imgBook"  src="{{ app.request.basepath }}/images/{{ book.image }}" alt="{{ book.title }}"></img>
		</div>
		<div class="col-md-5">
			<h2>{{ book.title }}</h2> 
			<p>
				{{book.author.firstname}} {{book.author.lastname}},
				{{ book.year }}
			</p>
			<p>
				<small>{{ book.longSummary }}</small>
			</p>
		</div>
		<div class="col-md-2 buy-panel">
			<p>
				Prix : {{ book.price }}â‚¬
			</p>	
			<p>
				<a href="{{ path('addtocart', { 'id': book.id }) }}" class="btn btn-primary">Ajouter au panier</a>
			</p>			
		</div>
	</div>
</div>
	
{% endblock %}